<Window x:Class="Bomberman.WPF.View.GameResultWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bomberman.WPF.View"
        mc:Ignorable="d"
        Title="GameResultWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>

        </Grid.ColumnDefinitions>
        <Button Grid.Row="0" Grid.Column="0" Content="Következő játszma"/>
        <Button Grid.Row="1" Grid.Column="0" Content="Játék mentése"/>
        <Button Grid.Row="3" Grid.Column="0" Content="Kilépés főmenübe"/>
        <Label Grid.Row="0" Grid.Column="1" Grid.RowSpan="2" Content="Játék eredménye: x. játékos nyert"/>
        <Label Grid.Row="2" Grid.Column="1" Grid.RowSpan="2" Content="Játékosok pontszáma:&#xA;1. játékos: x &#xA;2. játékos: y"/>
    </Grid>
</Window>
